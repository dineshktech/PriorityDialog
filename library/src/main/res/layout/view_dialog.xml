<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.Layout">

    <TextView
        android:id="@+id/sdl_title"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        style="@style/AppTheme.TextView.Title"
        tools:text="Title" />

    <LinearLayout style="@style/AppTheme.Layout.Content">

        <ScrollView
            android:id="@+id/sdl_message_scrollview"
            style="@style/AppTheme.ScrollView">

            <TextView
                android:id="@+id/sdl_message"
                android:fontFamily="sans-serif"
                style="@style/AppTheme.TextView.Message"
                tools:text="Lorem ipsum doler samet Jane is awesome guy and Kaylee is so hot." />
        </ScrollView>

        <FrameLayout
            android:id="@+id/sdl_custom"
            style="@style/AppTheme.Layout.Custom" />

        <ListView
            android:id="@+id/sdl_list"
            style="@style/AppTheme.ListView" />

    </LinearLayout>

    <View
        android:id="@+id/sdl_button_divider"
        style="@style/AppTheme.Divider" />

    <RelativeLayout
        android:id="@+id/sdl_buttons_default"
        style="@style/AppTheme.Layout.Buttons">

        <LinearLayout
            android:id="@+id/sdl_buttons_default_right"
            style="@style/AppTheme.Layout.Buttons.Right">

            <TextView
                android:id="@+id/sdl_button_neutral"
                style="@style/AppTheme.Button.Neutral"
                android:fontFamily="sans-serif"
                tools:text="Neutral" />

            <TextView
                android:id="@+id/sdl_button_negative"
                style="@style/AppTheme.Button.Neutral"
                android:fontFamily="sans-serif"
                tools:text="Negative" />

            <TextView
                android:id="@+id/sdl_button_positive"
                style="@style/AppTheme.Button.Neutral"
                android:fontFamily="sans-serif"
                tools:text="Positive" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sdl_buttons_stacked"
        style="@style/AppTheme.Layout.Buttons.Stacked">

        <TextView
            android:id="@+id/sdl_button_positive_stacked"
            style="@style/AppTheme.Button.Dialog.Stacked"
            android:fontFamily="sans-serif"
            tools:text="Positive" />

        <TextView
            android:id="@+id/sdl_button_negative_stacked"
            style="@style/AppTheme.Button.Dialog.Stacked"
            android:fontFamily="sans-serif"
            tools:text="Negative" />

        <TextView
            android:id="@+id/sdl_button_neutral_stacked"
            style="@style/AppTheme.Button.Dialog.Stacked"
            android:fontFamily="sans-serif"
            tools:text="Neutral" />
    </LinearLayout>

    <View
        android:id="@+id/sdl_buttons_bottom_space"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/grid_2" />
</LinearLayout>